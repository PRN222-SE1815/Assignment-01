@model List<BusinessLogic.DTOs.Responses.ConversationResponse>

@{
    ViewData["Title"] = "Study Groups";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Header Section -->
            <div class="conversations-header d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <h2 class="mb-0">
                    <i class="bi bi-people-fill"></i> My Study Groups
                </h2>
                <div class="d-flex gap-2 flex-wrap">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> All Conversations
                    </a>
                    <a asp-action="CreateStudyGroup" class="btn btn-success">
                        <i class="bi bi-plus-circle-fill"></i> Create Study Group
                    </a>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-info-circle-fill fs-3 me-3"></i>
                        <div>
                            <h5 class="mb-1">No study groups yet</h5>
                            <p class="mb-2">You haven't joined or created any study groups yet.</p>
                            <a asp-action="CreateStudyGroup" class="btn btn-success btn-sm">
                                <i class="bi bi-plus-circle"></i> Create your first study group
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var group in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 study-group-card">
                                <div class="card-header">
                                    <h5 class="mb-0 d-flex align-items-center">
                                        <i class="bi bi-people-fill me-2"></i> 
                                        <span class="text-truncate">@group.Title</span>
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between mb-3">
                                        <span class="badge bg-primary">
                                            <i class="bi bi-person-fill me-1"></i>
                                            @group.Participants.Count members
                                        </span>
                                        <small class="text-muted">
                                            <i class="bi bi-calendar3 me-1"></i>
                                            @group.CreatedAt.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                    
                                    <div class="members-preview mb-3">
                                        <small class="text-muted d-block mb-2"><strong>Members:</strong></small>
                                        @foreach (var participant in group.Participants.Take(3))
                                        {
                                            <div class="member-badge">
                                                <i class="bi bi-person-circle me-1"></i>
                                                @participant.FullName
                                            </div>
                                        }
                                        @if (group.Participants.Count > 3)
                                        {
                                            <div class="member-badge more-badge">
                                                +@(group.Participants.Count - 3) more
                                            </div>
                                        }
                                    </div>

                                    @if (group.LastMessage != null)
                                    {
                                        <div class="last-message">
                                            <small class="text-muted d-block mb-1">
                                                <i class="bi bi-chat-text me-1"></i>Last message:
                                            </small>
                                            <p class="mb-0 small">
                                                <strong>@group.LastMessage.SenderName:</strong>
                                                <span class="text-muted">
                                                    @(group.LastMessage.Body.Length > 40 
                                                        ? group.LastMessage.Body.Substring(0, 40) + "..." 
                                                        : group.LastMessage.Body)
                                                </span>
                                            </p>
                                        </div>
                                    }
                                </div>
                                <div class="card-footer bg-transparent border-0 pb-3">
                                    <a asp-action="Conversation" asp-route-id="@group.ConversationId" 
                                       class="btn btn-primary w-100">
                                        <i class="bi bi-chat-dots-fill me-1"></i> Open Chat
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .study-group-card {
        transition: all 0.3s ease;
    }
    
    .study-group-card:hover {
        transform: translateY(-5px);
    }
    
    .members-preview {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }
    
    .member-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.25rem 0.75rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 20px;
        font-size: 0.8rem;
        color: #495057;
    }
    
    .student-shell .member-badge {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
        color: #667eea;
    }
    
    .teacher-shell .member-badge {
        background: linear-gradient(135deg, rgba(17, 153, 142, 0.1) 0%, rgba(56, 239, 125, 0.1) 100%);
        color: #11998e;
    }
    
    .more-badge {
        background: #6c757d !important;
        color: white !important;
    }
    
    .last-message {
        padding: 0.75rem;
        background: #f8f9fa;
        border-radius: 10px;
        border-left: 3px solid #667eea;
    }
    
    .teacher-shell .last-message {
        border-left-color: #11998e;
    }
</style>

@section Scripts {
    <script>
        setTimeout(function() {
            document.querySelectorAll('.alert').forEach(function(alert) {
                alert.classList.remove('show');
                setTimeout(() => alert.remove(), 150);
            });
        }, 5000);
    </script>
}

