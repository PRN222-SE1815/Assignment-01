@model List<BusinessLogic.DTOs.Responses.ConversationResponse>

@{
    ViewData["Title"] = "Chat - Conversations";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Header Section -->
            <div class="conversations-header d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <h2 class="mb-0">
                    <i class="bi bi-chat-dots-fill"></i> My Conversations
                </h2>
                <div class="d-flex gap-2 flex-wrap">
                    <a asp-action="StudyGroups" class="btn btn-primary">
                        <i class="bi bi-people-fill"></i> Study Groups
                    </a>
                    <a asp-action="CreateStudyGroup" class="btn btn-success">
                        <i class="bi bi-plus-circle-fill"></i> Create Study Group
                    </a>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-info-circle-fill fs-3 me-3"></i>
                        <div>
                            <h5 class="mb-1">No conversations yet</h5>
                            <p class="mb-2">You don't have any conversations yet. Start by creating your first study group!</p>
                            <a asp-action="CreateStudyGroup" class="btn btn-success btn-sm">
                                <i class="bi bi-plus-circle"></i> Create your first study group
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="list-group">
                    @foreach (var conversation in Model)
                    {
                        <a asp-action="Conversation" asp-route-id="@conversation.ConversationId" 
                           class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h5 class="mb-2">
                                        @if (conversation.IsGroup)
                                        {
                                            <i class="bi bi-people-fill text-primary me-2"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-person-fill text-secondary me-2"></i>
                                        }
                                        @conversation.Title
                                    </h5>
                                    <p class="mb-2 text-muted small d-flex align-items-center">
                                        <i class="bi bi-person-badge me-1"></i>
                                        @conversation.Participants.Count participants
                                    </p>
                                    @if (conversation.LastMessage != null)
                                    {
                                        <p class="mb-0 text-secondary">
                                            <strong class="text-dark">@conversation.LastMessage.SenderName:</strong> 
                                            <span class="text-muted">
                                                @(conversation.LastMessage.Body.Length > 50 
                                                    ? conversation.LastMessage.Body.Substring(0, 50) + "..." 
                                                    : conversation.LastMessage.Body)
                                            </span>
                                        </p>
                                    }
                                </div>
                                <div class="text-end ms-3">
                                    <small class="text-muted d-block mb-2">
                                        <i class="bi bi-calendar3 me-1"></i>
                                        @conversation.CreatedAt.ToString("MMM dd, yyyy")
                                    </small>
                                    @if (conversation.UnreadCount > 0)
                                    {
                                        <span class="badge bg-danger rounded-pill">
                                            <i class="bi bi-envelope-fill me-1"></i>@conversation.UnreadCount new
                                        </span>
                                    }
                                </div>
                            </div>
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            document.querySelectorAll('.alert').forEach(function(alert) {
                alert.classList.remove('show');
                setTimeout(() => alert.remove(), 150);
            });
        }, 5000);
    </script>
}

