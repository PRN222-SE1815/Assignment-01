@model List<BusinessLogic.DTOs.Responses.NotificationResponse>

@{
    ViewData["Title"] = "Notifications";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-bell"></i> Notifications
                    </h4>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle fa-2x mb-2"></i>
                            <p class="mb-0">You have no notifications.</p>
                        </div>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var notification in Model)
                            {
                                <div class="list-group-item @(!notification.IsRead ? "bg-light" : "")" 
                                     data-notification-id="@notification.NotificationId">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">
                                            @if (!notification.IsRead)
                                            {
                                                <span class="badge bg-primary">New</span>
                                            }
                                            @notification.Title
                                        </h6>
                                        <small class="text-muted">
                                            @notification.CreatedAt.ToString("MMM dd, HH:mm")
                                        </small>
                                    </div>
                                    <p class="mb-1">@notification.Message</p>
                                    <small class="text-muted">
                                        <i class="fas fa-user"></i> From: @notification.SenderName
                                    </small>
                                    
                                    @if (!notification.IsRead)
                                    {
                                        <div class="mt-2">
                                            <button class="btn btn-sm btn-outline-primary mark-as-read" 
                                                    data-notification-id="@notification.NotificationId">
                                                <i class="fas fa-check"></i> Mark as Read
                                            </button>
                                        </div>
                                    }
                                    else if (notification.ReadAt != null)
                                    {
                                        <div class="mt-1">
                                            <small class="text-success">
                                                <i class="fas fa-check-double"></i> 
                                                Read on @notification.ReadAt.Value.ToString("MMM dd, HH:mm")
                                            </small>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-controller="Chat" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Chat
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.mark-as-read').forEach(button => {
            button.addEventListener('click', function() {
                const notificationId = this.getAttribute('data-notification-id');
                
                fetch('@Url.Action("MarkNotificationAsRead", "Chat")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    },
                    body: JSON.stringify({ notificationId: parseInt(notificationId) })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const item = document.querySelector(`[data-notification-id="${notificationId}"]`);
                        item.classList.remove('bg-light');
                        item.querySelector('.badge')?.remove();
                        this.remove();
                        
                        // Add read confirmation
                        const readInfo = document.createElement('div');
                        readInfo.className = 'mt-1';
                        readInfo.innerHTML = '<small class="text-success"><i class="fas fa-check-double"></i> Read just now</small>';
                        item.appendChild(readInfo);
                    }
                })
                .catch(error => console.error('Error:', error));
            });
        });
    </script>
}

