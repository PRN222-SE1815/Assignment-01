@model List<BusinessLogic.DTOs.Responses.GradeResponse>

@{
    ViewData["Title"] = "Grades";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    bool isTeacher = User.IsInRole("Teacher");
}

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-3">
        <div>
            <h2 class="mb-1 fw-bold">Grades</h2>
            <div class="text-muted">View and manage student grades</div>
        </div>

        @if (isTeacher)
        {
            <a asp-controller="Grades" asp-action="Create" class="btn btn-primary">
                <span class="me-1"></span> Add Grade
            </a>
        }
    </div>

    <!-- Table Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Student</th>
                            <th>Course</th>
                            <th class="text-center">Assignment</th>
                            <th class="text-center">Midterm</th>
                            <th class="text-center">Final</th>
                            <th class="text-center">Total</th>
                            <th class="text-end pe-3" style="width: 52px;"></th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-5">
                                    No grades found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var g in Model)
                            {
                                <tr>
                                    <td class="ps-3">
                                        <div class="fw-semibold">@g.StudentName</div>
                                    </td>

                                    <td>
                                        <span class="fw-semibold">@g.CourseName</span>
                                    </td>

                                    <td class="text-center">@DisplayScore(g.Assignment)</td>
                                    <td class="text-center">@DisplayScore(g.Midterm)</td>
                                    <td class="text-center">@DisplayScore(g.Final)</td>

                                    <td class="text-center fw-bold">
                                        @DisplayScore(g.Total)
                                    </td>

                                    <td class="text-end pe-3">
                                        <div class="dropdown">
                                            <button class="btn btn-sm p-1 border-0 bg-transparent"
                                                    type="button"
                                                    data-bs-toggle="dropdown"
                                                    aria-expanded="false"
                                                    title="Actions"
                                                    style="box-shadow:none;">
                                                &#8942;
                                            </button>

                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li>
                                                    <a class="dropdown-item"
                                                       asp-controller="Grades"
                                                       asp-action="Details"
                                                       asp-route-id="@g.GradeId">
                                                        Details
                                                    </a>
                                                </li>

                                                @if (isTeacher)
                                                {
                                                    <li>
                                                        <a class="dropdown-item"
                                                           asp-controller="Grades"
                                                           asp-action="Edit"
                                                           asp-route-id="@g.GradeId">
                                                            Edit
                                                        </a>
                                                    </li>

                                                    <li><hr class="dropdown-divider" /></li>

                                                    <li>
                                                        <button type="button"
                                                                class="dropdown-item text-danger btn-open-delete"
                                                                data-id="@g.GradeId"
                                                                data-student="@g.StudentName"
                                                                data-course="@g.CourseName"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#deleteConfirmModal">
                                                            Delete
                                                        </button>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>

        </div>
    </div>

</div>

@if (isTeacher)
{
    <!-- Delete Confirm Modal -->
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Confirm delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-2">Are you sure you want to delete this grade?</div>
                    <div class="small text-muted">
                        Student: <span class="fw-semibold" id="delStudent">—</span><br />
                        Course: <span class="fw-semibold" id="delCourse">—</span>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                    <form id="deleteForm" method="post" asp-controller="Grades" asp-action="Delete">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" id="deleteId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
}

@functions{
    string DisplayScore(decimal? v) => v.HasValue ? v.Value.ToString("0.##") : "—";
}

@section Scripts {
    <script>
        (function () {
            const deleteModal = document.getElementById('deleteConfirmModal');
            if (!deleteModal) return;

            deleteModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                if (!button) return;

                const id = button.getAttribute('data-id');
                const student = button.getAttribute('data-student');
                const course = button.getAttribute('data-course');

                const deleteIdEl = document.getElementById('deleteId');
                const delStudentEl = document.getElementById('delStudent');
                const delCourseEl = document.getElementById('delCourse');

                if (deleteIdEl) deleteIdEl.value = id || '';
                if (delStudentEl) delStudentEl.textContent = student || '—';
                if (delCourseEl) delCourseEl.textContent = course || '—';
            });
        })();
    </script>
}
