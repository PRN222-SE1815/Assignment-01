@model List<BusinessLogic.DTOs.Responses.GradeResponse>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Grades";

    // roles
    bool isAdmin = User.IsInRole("Admin");
    bool isTeacher = User.IsInRole("Teacher");
    bool canEdit = isTeacher || isAdmin;

    // Layout: CHỈ dùng nếu bạn chắc chắn có file _LayoutAdmin.cshtml
    // Nếu chưa có layout admin thì để luôn _LayoutTeacher.cshtml cho khỏi build lỗi.
    Layout = isAdmin
        ? "~/Views/Shared/_LayoutAdmin.cshtml"
        : "~/Views/Shared/_LayoutTeacher.cshtml";

    // Dropdown courses (nếu controller có set ViewBag.Courses)
    var courses = ViewBag.Courses as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();

    // giữ giá trị đã chọn sau khi search
    string selectedCourse = (ViewContext.HttpContext.Request.Query["courseId"].ToString() ?? "");
    string studentKeyword = (ViewContext.HttpContext.Request.Query["student"].ToString() ?? "");

    // Statistics calculations
    var gradesWithTotal = Model?.Where(g => g.Total.HasValue).ToList() ?? new List<BusinessLogic.DTOs.Responses.GradeResponse>();
    int range0to2 = gradesWithTotal.Count(g => g.Total >= 0 && g.Total < 2);
    int range2to4 = gradesWithTotal.Count(g => g.Total >= 2 && g.Total < 4);
    int range4to6 = gradesWithTotal.Count(g => g.Total >= 4 && g.Total < 6);
    int range6to8 = gradesWithTotal.Count(g => g.Total >= 6 && g.Total < 8);
    int range8to10 = gradesWithTotal.Count(g => g.Total >= 8 && g.Total <= 10);
    int passCount = gradesWithTotal.Count(g => g.Total >= 5);
    int failCount = gradesWithTotal.Count(g => g.Total < 5);
    int totalGrades = gradesWithTotal.Count;
}


<div class="container py-4">

   <!-- Header -->
<div class="d-flex flex-wrap align-items-start justify-content-between gap-2 mb-3">
    <div>
        <h2 class="mb-1 fw-bold">Grades</h2>
        <div class="text-muted">View and manage student grades</div>
    </div>

    <!-- RIGHT: Back + Add -->
    <div class="d-flex align-items-center gap-2">


    @* Add Grade: Admin + Teacher *@
    @if (canEdit)
    {
        <a asp-controller="Grades" asp-action="Create" class="btn btn-success shadow">
            Add Grade
        </a>
    }

    @* Back: luôn hiện, đi đúng theo role *@
    <a asp-controller="@(isAdmin ? "Admin" : "Teacher")"
       asp-action="Index"
       class="btn btn-outline-dark shadow">
        Back
    </a>

</div>

    </div>
</div>


    <!-- Filter Bar (Course + Student search) -->
    <div class="card shadow-sm border-0 mb-3">
        <div class="card-body p-3">
            <form asp-controller="Grades" asp-action="Index" method="get"
      class="row g-2 align-items-end"
      id="filterForm">


                <div class="col-12 col-md-5">
                    <label class="form-label small text-muted mb-1">Course</label>
                   <select name="courseId" class="form-select" id="courseFilter">

                        <option value="">All courses</option>

                        @foreach (var c in courses)
                        {
                            // c.Value, c.Text
                            var isSelected = (!string.IsNullOrEmpty(selectedCourse) && c.Value == selectedCourse);
                            <option value="@c.Value" selected="@(isSelected ? "selected" : null)">@c.Text</option>
                        }
                    </select>
                </div>

                <div class="col-12 col-md-5">
                    <label class="form-label small text-muted mb-1">Student name</label>
                    <input type="text"
                           name="student"
                           value="@studentKeyword"
                           class="form-control"
                           placeholder="Search by student name..." />
                </div>

                <div class="col-12 col-md-2 d-flex gap-2">
                    <button type="submit" class="btn btn-dark w-100">Search</button>
                    <a asp-controller="Grades" asp-action="Index" class="btn btn-light w-100">Reset</a>
                </div>

            </form>
        </div>
    </div>

    <!-- Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-3">Student</th>
                            <th>Course</th>
                            <th class="text-center">Assignment</th>
                            <th class="text-center">Midterm</th>
                            <th class="text-center">Final</th>
                            <th class="text-center">Total</th>
                            <th class="text-end pe-3" style="width: 52px;"></th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-5">
                                    No grades found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var g in Model)
                            {
                                <tr>
                                    <td class="ps-3">
                                        <div class="fw-semibold">@g.StudentName</div>
                                    </td>

                                    <td>
                                        <span class="fw-semibold">@g.CourseName</span>
                                    </td>

                                    <td class="text-center">@DisplayScore(g.Assignment)</td>
                                    <td class="text-center">@DisplayScore(g.Midterm)</td>
                                    <td class="text-center">@DisplayScore(g.Final)</td>
                                    <td class="text-center fw-bold">@DisplayScore(g.Total)</td>

                                    <td class="text-end pe-3">
                                        <div class="dropdown">
                                            <button class="btn btn-sm p-1 border-0 bg-transparent"
                                                    type="button"
                                                    data-bs-toggle="dropdown"
                                                    aria-expanded="false"
                                                    title="Actions"
                                                    style="box-shadow:none;">
                                                &#8942;
                                            </button>

                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li>
                                                    <a class="dropdown-item"
                                                       asp-controller="Grades"
                                                       asp-action="Details"
                                                       asp-route-id="@g.GradeId">
                                                        Details
                                                    </a>
                                                </li>

                                                @if (canEdit)
{
    <li>
        <a class="dropdown-item"
           asp-controller="Grades"
           asp-action="Edit"
           asp-route-id="@g.GradeId">
            Edit
        </a>
    </li>
}

@if (canEdit)
{
    <li><hr class="dropdown-divider" /></li>
    <li>
        <button type="button"
                class="dropdown-item text-danger"
                data-id="@g.GradeId"
                data-student="@g.StudentName"
                data-course="@g.CourseName"
                data-bs-toggle="modal"
                data-bs-target="#deleteConfirmModal">
            Delete
        </button>
    </li>
}

                                                
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <!-- Statistics Section (Teacher & Admin only) -->
    @if (canEdit && Model != null && Model.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <h4 class="fw-bold mb-3">
                    <i class="bi bi-bar-chart-fill me-2"></i>Grade Statistics
                </h4>
            </div>
        </div>

        <div class="row g-4">
            <!-- Grade Distribution Bar Chart -->
            <div class="col-12 col-lg-7">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-white border-0 pt-3">
                        <h5 class="card-title mb-0 fw-semibold">Grade Distribution</h5>
                        <small class="text-muted">Number of students by score range</small>
                    </div>
                    <div class="card-body">
                        <canvas id="gradeDistributionChart" height="250"></canvas>
                    </div>
                </div>
            </div>

            <!-- Pass/Fail Pie Chart -->
            <div class="col-12 col-lg-5">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-white border-0 pt-3">
                        <h5 class="card-title mb-0 fw-semibold">Pass Rate (≥ 5 points)</h5>
                        <small class="text-muted">@passCount passed / @failCount failed out of @totalGrades students</small>
                    </div>
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <div style="max-width: 280px; width: 100%;">
                            <canvas id="passRateChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Hidden data for charts -->
        <div id="chartData" 
             data-distribution="[@range0to2, @range2to4, @range4to6, @range6to8, @range8to10]"
             data-pass="@passCount"
             data-fail="@failCount"
             style="display:none;">
        </div>
    }

</div>

@if (canEdit)
{
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">Confirm delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-2">Are you sure you want to delete this grade?</div>
                    <div class="small text-muted">
                        Student: <span class="fw-semibold" id="delStudent">—</span><br />
                        Course: <span class="fw-semibold" id="delCourse">—</span>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                    <form id="deleteForm" method="post" asp-controller="Grades" asp-action="Delete">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" id="deleteId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
}

@functions{
    string DisplayScore(decimal? v) => v.HasValue ? v.Value.ToString("0.##") : "—";
}

@section Scripts {
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    
    <script>
        (function () {
            // Delete modal
            const deleteModal = document.getElementById('deleteConfirmModal');
            if (deleteModal) {
                deleteModal.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    if (!button) return;

                    const id = button.getAttribute('data-id');
                    const student = button.getAttribute('data-student');
                    const course = button.getAttribute('data-course');

                    document.getElementById('deleteId').value = id || '';
                    document.getElementById('delStudent').textContent = student || '—';
                    document.getElementById('delCourse').textContent = course || '—';
                });
            }

            // Auto filter when selecting course
            const filterForm = document.getElementById("filterForm");
            const courseFilter = document.getElementById("courseFilter");

            if (filterForm && courseFilter) {
                courseFilter.addEventListener("change", function () {
                    filterForm.submit();
                });
            }

            // Initialize Charts
            const chartDataEl = document.getElementById('chartData');
            if (chartDataEl) {
                // Parse data from hidden element
                const distributionData = JSON.parse(chartDataEl.getAttribute('data-distribution'));
                const passCount = parseInt(chartDataEl.getAttribute('data-pass'));
                const failCount = parseInt(chartDataEl.getAttribute('data-fail'));

                // Grade Distribution Bar Chart
                const distributionCtx = document.getElementById('gradeDistributionChart');
                if (distributionCtx) {
                    new Chart(distributionCtx, {
                        type: 'bar',
                        data: {
                            labels: ['0-2', '2-4', '4-6', '6-8', '8-10'],
                            datasets: [{
                                label: 'Number of Students',
                                data: distributionData,
                                backgroundColor: [
                                    'rgba(220, 53, 69, 0.8)',   // Red - Very Poor
                                    'rgba(255, 193, 7, 0.8)',   // Yellow - Poor
                                    'rgba(255, 159, 64, 0.8)',  // Orange - Average
                                    'rgba(25, 135, 84, 0.8)',   // Green - Good
                                    'rgba(13, 110, 253, 0.8)'   // Blue - Excellent
                                ],
                                borderColor: [
                                    'rgba(220, 53, 69, 1)',
                                    'rgba(255, 193, 7, 1)',
                                    'rgba(255, 159, 64, 1)',
                                    'rgba(25, 135, 84, 1)',
                                    'rgba(13, 110, 253, 1)'
                                ],
                                borderWidth: 1,
                                borderRadius: 6,
                                barPercentage: 0.7
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    display: false
                                },
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            return context.parsed.y + ' student(s)';
                                        }
                                    }
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: {
                                        stepSize: 1,
                                        precision: 0
                                    },
                                    title: {
                                        display: true,
                                        text: 'Number of Students'
                                    }
                                },
                                x: {
                                    title: {
                                        display: true,
                                        text: 'Score Range'
                                    }
                                }
                            }
                        }
                    });
                }

                // Pass Rate Pie Chart
                const passRateCtx = document.getElementById('passRateChart');
                if (passRateCtx) {
                    new Chart(passRateCtx, {
                        type: 'doughnut',
                        data: {
                            labels: ['Pass (≥5)', 'Fail (<5)'],
                            datasets: [{
                                data: [passCount, failCount],
                                backgroundColor: [
                                    'rgba(25, 135, 84, 0.85)',  // Green - Pass
                                    'rgba(220, 53, 69, 0.85)'   // Red - Fail
                                ],
                                borderColor: [
                                    'rgba(25, 135, 84, 1)',
                                    'rgba(220, 53, 69, 1)'
                                ],
                                borderWidth: 2,
                                hoverOffset: 8
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: true,
                            cutout: '55%',
                            plugins: {
                                legend: {
                                    position: 'bottom',
                                    labels: {
                                        padding: 20,
                                        usePointStyle: true,
                                        pointStyle: 'circle'
                                    }
                                },
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            const total = passCount + failCount;
                                            const percentage = total > 0 
                                                ? ((context.parsed / total) * 100).toFixed(1) 
                                                : 0;
                                            return context.label + ': ' + context.parsed + ' (' + percentage + '%)';
                                        }
                                    }
                                }
                            }
                        }
                    });
                }
            }
        })();
    </script>
}

