@model BusinessLogic.DTOs.Responses.GradeResponse

@{
    ViewData["Title"] = "Grade Details";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
    bool isTeacher = User.IsInRole("Teacher");
}

<div class="container py-4">

    <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-3">
        <div>
            <h2 class="mb-1 fw-bold">Grade Details</h2>
            <div class="text-muted">View grade information</div>
        </div>

        <div class="d-flex gap-2">
            <a asp-controller="Grades" asp-action="Index" class="btn btn-light">Back</a>
            @if (isTeacher)
            {
                <a asp-controller="Grades" asp-action="Edit" asp-route-id="@Model.GradeId" class="btn btn-primary">
                    Edit
                </a>
            }
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <div class="row g-4">

                <div class="col-md-7">
                    <div class="mb-3">
                        <div class="text-muted small">Student</div>
                        <div class="fs-5 fw-semibold">@Model.StudentName</div>
                    </div>

                    <div class="mb-3">
                        <div class="text-muted small">Course</div>
                        <div class="fw-semibold">@Model.CourseName</div>
                    </div>
                </div>

                <div class="col-md-5">
                    <div class="p-3 rounded-4 border bg-light">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Assignment</span>
                            <span class="fw-semibold">@DisplayScore(Model.Assignment)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Midterm</span>
                            <span class="fw-semibold">@DisplayScore(Model.Midterm)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Final</span>
                            <span class="fw-semibold">@DisplayScore(Model.Final)</span>
                        </div>

                        <hr class="my-2" />

                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Total</span>
                            <span class="fw-bold fs-5">@DisplayScore(Model.Total)</span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

@functions{
    string DisplayScore(decimal? v) => v.HasValue ? v.Value.ToString("0.##") : "—";
}
