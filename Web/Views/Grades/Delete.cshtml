@model BusinessLogic.DTOs.Responses.GradeResponse

@{
    ViewData["Title"] = "Delete Grade";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-sm border-0">
                <div class="card-body p-4">

                    <h4 class="mb-2 text-danger">Confirm delete</h4>
                    <div class="text-muted mb-4">
                        Are you sure you want to delete this grade?
                    </div>

                    <div class="p-3 rounded-3 border bg-light mb-4">
                        <div class="fw-semibold">@Model.StudentName</div>
                        <div class="text-muted small">@Model.CourseName</div>
                    </div>

                    <form asp-action="Delete" asp-route-id="@Model.GradeId" method="post">
                        @Html.AntiForgeryToken()

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-light">No</a>
                            <button type="submit" class="btn btn-danger px-4">Yes, delete</button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
