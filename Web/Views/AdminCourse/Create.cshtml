@model BusinessLogic.DTOs.Requests.CreateCourseRequest

@{
    ViewData["Title"] = "Create Course";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Create New Course</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3"></div>

                        <div class="row g-3">
                            <!-- Course Code -->
                            <div class="col-md-6">
                                <label asp-for="CourseCode" class="form-label fw-semibold">
                                    <i class="bi bi-tag me-1"></i>Course Code <span class="text-danger">*</span>
                                </label>
                                <input asp-for="CourseCode" class="form-control form-control-lg" placeholder="e.g., CS101" required />
                                <span asp-validation-for="CourseCode" class="text-danger small"></span>
                            </div>

                            <!-- Credits -->
                            <div class="col-md-6">
                                <label asp-for="Credits" class="form-label fw-semibold">
                                    <i class="bi bi-award me-1"></i>Credits
                                </label>
                                <input asp-for="Credits" class="form-control form-control-lg" type="number" min="1" max="10" placeholder="3" />
                                <span asp-validation-for="Credits" class="text-danger small"></span>
                            </div>

                            <!-- Course Name -->
                            <div class="col-12">
                                <label asp-for="CourseName" class="form-label fw-semibold">
                                    <i class="bi bi-book me-1"></i>Course Name <span class="text-danger">*</span>
                                </label>
                                <input asp-for="CourseName" class="form-control form-control-lg" placeholder="e.g., Introduction to Computer Science" required />
                                <span asp-validation-for="CourseName" class="text-danger small"></span>
                            </div>

                            <!-- Semester -->
                            <div class="col-md-6">
                                <label asp-for="Semester" class="form-label fw-semibold">
                                    <i class="bi bi-calendar-event me-1"></i>Semester
                                </label>
                                <select asp-for="Semester" class="form-select form-select-lg">
                                    <option value="">-- Select Semester --</option>
                                    <option value="Fall 2024">Fall 2024</option>
                                    <option value="Spring 2025">Spring 2025</option>
                                    <option value="Summer 2025">Summer 2025</option>
                                    <option value="Fall 2025">Fall 2025</option>
                                    <option value="Spring 2026">Spring 2026</option>
                                </select>
                                <span asp-validation-for="Semester" class="text-danger small"></span>
                            </div>

                            <!-- Assigned Teacher -->
                            <div class="col-md-6">
                                <label asp-for="TeacherId" class="form-label fw-semibold">
                                    <i class="bi bi-person-badge me-1"></i>Assigned Teacher
                                </label>
                                <select asp-for="TeacherId" class="form-select form-select-lg" asp-items="ViewBag.Teachers">
                                    <option value="">-- Not Assigned --</option>
                                </select>
                                <span asp-validation-for="TeacherId" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 shadow">
                                <i class="bi bi-check-circle me-2"></i>Create Course
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Client-side course code uniqueness validation
        $('#CourseCode').on('blur', function() {
            var courseCode = $(this).val();
            if (courseCode) {
                $.get('@Url.Action("CheckCourseCode")', { courseCode: courseCode }, function(data) {
                    if (!data) {
                        $('#CourseCode').addClass('is-invalid');
                        $('#CourseCode').after('<div class="invalid-feedback">Course code already exists!</div>');
                    } else {
                        $('#CourseCode').removeClass('is-invalid');
                        $('#CourseCode').next('.invalid-feedback').remove();
                    }
                });
            }
        });
    </script>
}
