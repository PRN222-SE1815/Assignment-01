@model BusinessLogic.DTOs.Responses.CourseDetailResponse

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container mt-4 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm rounded-4 border-danger">
                <div class="card-header bg-danger text-white rounded-top-4">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Delete Course</h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this course? This action cannot be undone.
                    </div>

                    <h5 class="mb-3">Course Details:</h5>

                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Course Code</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-danger fs-6">@Model.CourseCode</span>
                        </dd>

                        <dt class="col-sm-4 text-muted">Course Name</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.CourseName</strong>
                        </dd>

                        <dt class="col-sm-4 text-muted">Credits</dt>
                        <dd class="col-sm-8">
                            @(Model.Credits?.ToString() ?? "Not specified")
                        </dd>

                        <dt class="col-sm-4 text-muted">Semester</dt>
                        <dd class="col-sm-8">
                            @(Model.Semester ?? "Not specified")
                        </dd>

                        <dt class="col-sm-4 text-muted">Teacher</dt>
                        <dd class="col-sm-8">
                            @(Model.TeacherName ?? "Not assigned")
                        </dd>

                        <dt class="col-sm-4 text-muted">Enrolled Students</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary rounded-pill">
                                @Model.EnrolledCount students
                            </span>
                            @if (Model.EnrolledCount > 0)
                            {
                                <div class="alert alert-warning mt-2" role="alert">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>Note:</strong> This course has active enrollments. You cannot delete it until all students are unenrolled.
                                </div>
                            }
                        </dd>
                    </dl>

                    <hr />

                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="CourseId" />
                        <button type="submit" class="btn btn-danger rounded-pill px-4" 
                                @(Model.EnrolledCount > 0 ? "disabled" : "")>
                            <i class="fas fa-trash me-2"></i>Yes, Delete Course
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
