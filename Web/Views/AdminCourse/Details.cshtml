@model BusinessLogic.DTOs.Responses.CourseDetailResponse

@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-4 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm rounded-4">
                <div class="card-header bg-info text-white rounded-top-4">
                    <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i>Course Details</h4>
                </div>
                <div class="card-body p-4">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            <i class="fas fa-barcode me-2"></i>Course Code
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info fs-6">@Model.CourseCode</span>
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="fas fa-book me-2"></i>Course Name
                        </dt>
                        <dd class="col-sm-8">
                            <strong>@Model.CourseName</strong>
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="fas fa-star me-2"></i>Credits
                        </dt>
                        <dd class="col-sm-8">
                            @(Model.Credits?.ToString() ?? "Not specified")
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="fas fa-calendar me-2"></i>Semester
                        </dt>
                        <dd class="col-sm-8">
                            @(Model.Semester ?? "Not specified")
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="fas fa-chalkboard-teacher me-2"></i>Teacher
                        </dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.TeacherName))
                            {
                                <div>
                                    <strong>@Model.TeacherName</strong>
                                    @if (!string.IsNullOrEmpty(Model.Department))
                                    {
                                        <br /><small class="text-muted">Department: @Model.Department</small>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">Not assigned</span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="fas fa-users me-2"></i>Enrolled Students
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary rounded-pill fs-6">
                                @Model.EnrolledCount students
                            </span>
                        </dd>
                    </dl>

                    <hr />

                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.CourseId" class="btn btn-warning rounded-pill px-4">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.CourseId" class="btn btn-danger rounded-pill px-4">
                            <i class="fas fa-trash me-2"></i>Delete
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
