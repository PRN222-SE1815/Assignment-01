@model List<BusinessLogic.DTOs.Responses.CourseDetailResponse>

@{
    ViewData["Title"] = "Course Management";
}

<div class="container mt-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-book"></i> Course Management</h2>
            <p class="text-muted">Manage all courses in the system</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-success rounded-pill px-4">
                <i class="fas fa-plus-circle me-2"></i>Add New Course
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show rounded-4" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show rounded-4" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm rounded-4">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Course Code</th>
                            <th>Course Name</th>
                            <th>Credits</th>
                            <th>Semester</th>
                            <th>Teacher</th>
                            <th>Enrolled</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var index = 1;
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <td>@(index++)</td>
                                    <td><span class="badge bg-info">@course.CourseCode</span></td>
                                    <td><strong>@course.CourseName</strong></td>
                                    <td class="text-center">@(course.Credits?.ToString() ?? "-")</td>
                                    <td>@(course.Semester ?? "-")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(course.TeacherName))
                                        {
                                            <span><i class="fas fa-chalkboard-teacher me-1"></i>@course.TeacherName</span>
                                            @if (!string.IsNullOrEmpty(course.Department))
                                            {
                                                <br /><small class="text-muted">@course.Department</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not assigned</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary rounded-pill">
                                            @course.EnrolledCount students
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@course.CourseId" 
                                               class="btn btn-sm btn-info" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@course.CourseId" 
                                               class="btn btn-sm btn-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@course.CourseId" 
                                               class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5">
                                    <i class="fas fa-book fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No courses found. Click "Add New Course" to create one.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
