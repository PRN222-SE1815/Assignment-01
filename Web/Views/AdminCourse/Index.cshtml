@model List<BusinessLogic.DTOs.Responses.CourseDetailResponse>

@{
    ViewData["Title"] = "Course Management";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-book"></i> Course Management</h2>
            <p class="text-muted">Manage all courses in the system</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-success rounded-pill px-4">
                <i class="fas fa-plus-circle me-2"></i>Add New Course
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show rounded-4" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show rounded-4" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm rounded-4">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Course Code</th>
                            <th>Course Name</th>
                            <th>Credits</th>
                            <th>Semester</th>
                            <th>Teacher</th>
                            <th>Enrolled</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var index = 1;
                            @foreach (var course in Model)
                            {
                                <tr class="course-row">
                                    <td class="text-muted fw-semibold">@(index++)</td>
                                    <td><span class="badge bg-gradient bg-info text-white px-3 py-2">@course.CourseCode</span></td>
                                    <td>
                                        <div class="fw-semibold text-dark">@course.CourseName</div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-light text-dark">@(course.Credits?.ToString() ?? "-")</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary px-3 py-2">@(course.Semester ?? "-")</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(course.TeacherName))
                                        {
                                            <div class="d-flex align-items-center">
                                                <div class="teacher-avatar me-2">
                                                    <i class="bi bi-person-circle"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-semibold">@course.TeacherName</div>
                                                    @if (!string.IsNullOrEmpty(course.Department))
                                                    {
                                                        <small class="text-muted">@course.Department</small>
                                                    }
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Not assigned</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary bg-gradient rounded-pill px-3 py-2">
                                            <i class="bi bi-people-fill me-1"></i>@course.EnrolledCount
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@course.CourseId" 
                                               class="btn btn-sm btn-outline-info" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@course.CourseId" 
                                               class="btn btn-sm btn-outline-warning" title="Edit Course">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@course.CourseId" 
                                               class="btn btn-sm btn-outline-danger" title="Delete Course"
                                               onclick="return confirm('Are you sure you want to delete this course?');">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5">
                                    <i class="fas fa-book fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No courses found. Click "Add New Course" to create one.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
