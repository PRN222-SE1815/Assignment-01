@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Access Denied</title>
    <style>
        body { background-color: #F3F4F6; font-family: Arial, sans-serif; }
        .container { max-width: 560px; margin: 100px auto; background: white; padding: 32px; border-radius: 12px; box-shadow: 0 6px 18px rgba(0,0,0,0.08); }
        .title { color: #EF4444; font-size: 22px; margin-bottom: 12px; }
        .text { color: #1E293B; }
        .link { color: #3730A3; text-decoration: none; }
    </style>
</head>
<body>
<div class="container">
    <div class="title">Access Denied</div>
    <p class="text">You do not have permission to access this page.</p>
    <a class="link" asp-controller="Account" asp-action="Login">Return to Login</a>
</div>
</body>
</html>
