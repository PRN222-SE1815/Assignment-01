@{
    var currentAction = (ViewContext.RouteData.Values["action"]?.ToString() ?? string.Empty).ToLowerInvariant();
    var currentController = (ViewContext.RouteData.Values["controller"]?.ToString() ?? string.Empty).ToLowerInvariant();

    bool IsActive(string controller, string action)
        => currentController == controller.ToLowerInvariant() && currentAction == action.ToLowerInvariant();
}
<div class="admin-sidebar">
    <div class="p-3 admin-sidebar-header">
        <h5 class="mb-0">
            <i class="bi bi-speedometer2"></i> Admin Panel
        </h5>
    </div>

    <nav class="nav flex-column">
        <a class="nav-link @(IsActive("Admin", "Index") ? "active" : "")" asp-controller="Admin" asp-action="Index">
            <i class="bi bi-house-door"></i> Dashboard
        </a>

        <a class="nav-link @(IsActive("Admin", "UserManagement") ? "active" : "")" asp-controller="Admin" asp-action="UserManagement">
            <i class="bi bi-people"></i> User Management
        </a>

        <div class="px-3 pt-3 pb-2">
            <small class="text-muted text-uppercase">Academic</small>
        </div>

        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">
            <i class="bi bi-journal-text"></i> Course Management
            <span class="badge bg-secondary ms-2">Soon</span>
        </a>

        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">
            <i class="bi bi-calendar-check"></i> Schedule Management
            <span class="badge bg-secondary ms-2">Soon</span>
        </a>

        <div class="px-3 pt-3 pb-2">
            <small class="text-muted text-uppercase">System</small>
        </div>

        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">
            <i class="bi bi-clipboard-data"></i> Reports
            <span class="badge bg-secondary ms-2">Soon</span>
        </a>
    </nav>
</div>
