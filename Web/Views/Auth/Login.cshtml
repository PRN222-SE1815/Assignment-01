@model Web.Models.Auth.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="auth-card">
    <div class="auth-card-header">
        <i class="bi bi-shield-lock-fill"></i>
        <h2>Login</h2>
        <p>Welcome back! Please login to continue</p>
    </div>
    
    <div class="auth-card-body">
        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle-fill me-2"></i>@ViewData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="Login" asp-controller="Auth" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="ReturnUrl" />

            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-person-fill"></i>
                    </span>
                    <input asp-for="Username" class="form-control" placeholder="Enter your username" autofocus />
                </div>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-lock-fill"></i>
                    </span>
                    <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Remember me</label>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Login
                </button>
            </div>

            <div class="text-center">
                <a asp-action="ForgotPassword" asp-controller="Auth" class="auth-link">
                    <i class="bi bi-question-circle me-1"></i>Forgot password?
                </a>
            </div>
        </form>
    </div>

    <div class="auth-footer">
        <small><i class="bi bi-c-circle me-1"></i>School Management System 2026</small>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
