@model BusinessLogic.DTOs.Requests.ResetPasswordRequest
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="auth-card">
    <div class="auth-card-header">
        <i class="bi bi-shield-lock-fill"></i>
        <h2>Reset Password</h2>
        <p>Create a new secure password for your account</p>
    </div>
    
    <div class="auth-card-body">
        <div class="alert alert-warning mb-4" style="border-radius: 10px; border: none; background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Note:</strong> Password must be at least 6 characters and include letters and numbers.
        </div>

        <form asp-action="ResetPassword" asp-controller="Auth" method="post" class="auth-form">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Token" />

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label">New Password</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-lock-fill"></i>
                    </span>
                    <input asp-for="NewPassword" class="form-control" placeholder="Enter new password" />
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-check2-square"></i>
                    </span>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-enter password" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle-fill me-2"></i>Reset password
                </button>
            </div>

            <div class="text-center">
                <a asp-action="Login" asp-controller="Auth" class="auth-link">
                    <i class="bi bi-arrow-left me-1"></i>Back to login
                </a>
            </div>
        </form>
    </div>

    <div class="auth-footer">
        <small><i class="bi bi-info-circle me-1"></i>After resetting, you can login with your new password</small>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
