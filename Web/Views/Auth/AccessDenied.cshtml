@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="auth-card">
    <div class="auth-card-body text-center" style="padding: 3rem 2.5rem;">
        <div class="access-denied-icon mb-3">
            <i class="bi bi-exclamation-triangle-fill"></i>
        </div>
        
        <h2 class="access-denied-title mb-3">Access Denied</h2>
        
        <p class="text-muted mb-4" style="font-size: 1.1rem;">
            You don't have permission to access this page.<br/>
            Please contact the administrator if you believe this is an error.
        </p>

        <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
            <a asp-action="Login" asp-controller="Auth" class="btn btn-primary">
                <i class="bi bi-box-arrow-in-right me-2"></i>Login again
            </a>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                <i class="bi bi-house-fill me-2"></i>Go to homepage
            </a>
        </div>

        <div class="auth-divider mt-4">
            <span>Need help?</span>
        </div>

        <div class="mt-3">
            <small class="text-muted">
                <i class="bi bi-envelope me-1"></i>Contact: support@schoolmanagement.com
            </small>
        </div>
    </div>

    <div class="auth-footer">
        <small><i class="bi bi-shield-lock me-1"></i>Access is controlled by system administrators</small>
    </div>
</div>
