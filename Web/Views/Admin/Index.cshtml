@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Welcome Section -->
<div class="mb-4">
    <h2>Welcome, @User.FindFirst("FullName")?.Value!</h2>
    <p class="text-muted">School Management System - Administrator Dashboard</p>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <h4 class="mb-3">Quick Actions</h4>
    </div>

    <div class="col-md-6 col-lg-3 mb-3">
        <a asp-action="UserManagement" asp-controller="Admin" class="text-decoration-none">
            <div class="card dashboard-card text-center">
                <div class="card-body py-4">
                    <i class="bi bi-people-fill text-primary" style="font-size: 3rem;"></i>
                    <h5 class="mt-3 mb-2">Manage Users</h5>
                    <p class="text-muted small mb-0">View, create, edit users</p>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-6 col-lg-3 mb-3">
        <div class="card dashboard-card text-center opacity-50">
            <div class="card-body py-4">
                <i class="bi bi-journal-plus text-secondary" style="font-size: 3rem;"></i>
                <h5 class="mt-3 mb-2">Add Course</h5>
                <p class="text-muted small mb-0">Create new course</p>
                <span class="badge bg-secondary mt-2">Coming Soon</span>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 mb-3">
        <div class="card dashboard-card text-center opacity-50">
            <div class="card-body py-4">
                <i class="bi bi-calendar-event text-secondary" style="font-size: 3rem;"></i>
                <h5 class="mt-3 mb-2">View Schedule</h5>
                <p class="text-muted small mb-0">Check class schedules</p>
                <span class="badge bg-secondary mt-2">Coming Soon</span>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 mb-3">
        <div class="card dashboard-card text-center opacity-50">
            <div class="card-body py-4">
                <i class="bi bi-clipboard-data text-secondary" style="font-size: 3rem;"></i>
                <h5 class="mt-3 mb-2">Reports</h5>
                <p class="text-muted small mb-0">View system reports</p>
                <span class="badge bg-secondary mt-2">Coming Soon</span>
            </div>
        </div>
    </div>
</div>
