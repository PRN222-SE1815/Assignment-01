@model Web.Models.Admin.UserManagementViewModel
@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">User Management</h2>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createUserModal">
        <i class="bi bi-person-plus"></i> Create User
    </button>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="get" asp-action="UserManagement" asp-controller="Admin" class="row g-2 mb-3">
    <div class="col-sm-8 col-md-6">
        <input class="form-control" name="search" value="@Model.Search" placeholder="Search by username, full name, email..." />
    </div>
    <div class="col-auto">
        <button class="btn btn-outline-secondary" type="submit">
            <i class="bi bi-search"></i> Search
        </button>
    </div>
    <div class="col-auto">
        <a class="btn btn-outline-secondary" asp-action="UserManagement" asp-controller="Admin">
            Clear
        </a>
    </div>
</form>

<div class="card border-0 shadow-sm user-table-card">
<div class="card-body p-0">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0 user-table">
            <thead>
                <tr>
                    <th style="width: 80px;">User ID</th>
                    <th style="width: 150px;">Username</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th style="width: 120px;">Role</th>
                    <th style="width: 100px;" class="text-center">Status</th>
                    <th style="width: 120px;" class="text-center">Actions</th>
                </tr>
            </thead>
        <tbody>
        @foreach (var u in Model.PagedUsers.Items)
        {
            var editModalId = $"editUserModal_{u.UserId}";
            <tr>
                <td>@u.UserId</td>
                <td>@u.Username</td>
                <td>@u.FullName</td>
                <td>@u.Email</td>
                <td>@(u.RoleName ?? u.RoleId?.ToString())</td>
                <td>
                    @if (u.IsActive == true)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </td>
                <td class="text-end">
                    <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#@editModalId">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <form asp-action="DeleteUser" asp-controller="Admin" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="userId" value="@u.UserId" />
                        <input type="hidden" name="search" value="@Model.Search" />
                        <input type="hidden" name="page" value="@Model.PagedUsers.PageNumber" />
                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this user?');">
                            <i class="bi bi-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>

            <!-- Edit modal -->
            <div class="modal fade" id="@editModalId" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Update User: @u.Username</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form asp-action="UpdateUser" asp-controller="Admin" method="post">
                            @Html.AntiForgeryToken()
                            <div class="modal-body">
                                <input type="hidden" name="userId" value="@u.UserId" />
                                <input type="hidden" name="search" value="@Model.Search" />
                                <input type="hidden" name="page" value="@Model.PagedUsers.PageNumber" />

                                <div class="mb-3">
                                    <label class="form-label">Full name</label>
                                    <input class="form-control" name="FullName" value="@u.FullName" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input class="form-control" name="Email" value="@u.Email" />
                                </div>
                                <div class="row">
                                    <div class="col-6 mb-3">
                                        <label class="form-label">RoleId</label>
                                        <select class="form-select" name="RoleId">
                                            <option value="">(no change)</option>
                                                <option value="1" selected="@(u.RoleId == 1)">Admin</option>
                                                <option value="2" selected="@(u.RoleId == 2)">Teacher</option>
                                                <option value="3" selected="@(u.RoleId == 3)">Student</option>
                                        </select>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <label class="form-label">Active</label>
                                        <select class="form-select" name="IsActive">
                                            <option value="">(no change)</option>
                                                <option value="true" selected="@(u.IsActive == true)">Active</option>
                                                <option value="false" selected="@(u.IsActive == false)">Inactive</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">New password</label>
                                    <input class="form-control" name="NewPassword" type="password" />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
        </tbody>
    </table>
</div>

<!-- Pagination -->
@if (Model.PagedUsers.TotalPages > 1)
{
    <nav aria-label="User pagination">
        <ul class="pagination">
            <li class="page-item @(Model.PagedUsers.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="UserManagement" asp-controller="Admin" asp-route-search="@Model.Search" asp-route-page="@(Model.PagedUsers.PageNumber - 1)">Previous</a>
            </li>
            @for (var p = 1; p <= Model.PagedUsers.TotalPages; p++)
            {
                <li class="page-item @(p == Model.PagedUsers.PageNumber ? "active" : "")">
                    <a class="page-link" asp-action="UserManagement" asp-controller="Admin" asp-route-search="@Model.Search" asp-route-page="@p">@p</a>
                </li>
            }
            <li class="page-item @(Model.PagedUsers.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="UserManagement" asp-controller="Admin" asp-route-search="@Model.Search" asp-route-page="@(Model.PagedUsers.PageNumber + 1)">Next</a>
            </li>
        </ul>
    </nav>
}

<!-- Create modal -->
<div class="modal fade" id="createUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="CreateUser" asp-controller="Admin" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="search" value="@Model.Search" />
                    <input type="hidden" name="page" value="@Model.PagedUsers.PageNumber" />

                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input class="form-control" name="NewUser.Username" value="@Model.NewUser.Username" />
                        <span class="text-danger" asp-validation-for="NewUser.Username"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input class="form-control" type="password" name="NewUser.Password" />
                        <span class="text-danger" asp-validation-for="NewUser.Password"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Full name</label>
                        <input class="form-control" name="NewUser.FullName" value="@Model.NewUser.FullName" />
                        <span class="text-danger" asp-validation-for="NewUser.FullName"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input class="form-control" name="NewUser.Email" value="@Model.NewUser.Email" />
                        <span class="text-danger" asp-validation-for="NewUser.Email"></span>
                    </div>
                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label">Role</label>
                            <select class="form-select" name="NewUser.RoleId">
                                <option value="1">Admin</option>
                                <option value="2">Teacher</option>
                                <option value="3" selected>Student</option>
                            </select>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label">Active</label>
                            <select class="form-select" name="NewUser.IsActive">
                                <option value="true" selected>Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
