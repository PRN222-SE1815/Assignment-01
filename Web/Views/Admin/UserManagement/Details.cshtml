@model Web.Models.Admin.UserDetailViewModel
@{
    ViewBag.Title = "User Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Admin/UserManagement/Details.css" asp-append-version="true" />
}

<div class="page-header">
    <div>
        <h1 class="page-title">User Details</h1>
        <p class="page-subtitle">Review account profile</p>
    </div>
    <div class="header-actions">
        <a class="btn-secondary" asp-action="Index">Back to list</a>
        <a class="btn-primary" asp-action="Edit" asp-route-id="@Model.UserId">Edit</a>
    </div>
</div>

<div class="card">
    <div class="detail-grid">
        <div class="detail-item">
            <span class="detail-label">User ID</span>
            <span class="detail-value">@Model.UserId</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Username</span>
            <span class="detail-value">@Model.Username</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Full Name</span>
            <span class="detail-value">@Model.FullName</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Email</span>
            <span class="detail-value">@(string.IsNullOrWhiteSpace(Model.Email) ? "-" : Model.Email)</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Role</span>
            <span class="detail-value">@Model.Role</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Status</span>
            <span class="detail-value">@(Model.IsActive ? "Active" : "Inactive")</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Created At</span>
            <span class="detail-value">@Model.CreatedAt.ToString("u")</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Updated At</span>
            <span class="detail-value">@(Model.UpdatedAt?.ToString("u") ?? "-")</span>
        </div>
    </div>
</div>

@if (Model.Role == "STUDENT")
{
    <div class="card">
        <h2 class="section-title">Student Profile</h2>
        <div class="detail-grid">
            <div class="detail-item">
                <span class="detail-label">Student Code</span>
                <span class="detail-value">@Model.StudentCode</span>
            </div>
            <div class="detail-item">
                <span class="detail-label">Program ID</span>
                <span class="detail-value">@(Model.ProgramId?.ToString() ?? "-")</span>
            </div>
            <div class="detail-item">
                <span class="detail-label">Current Semester</span>
                <span class="detail-value">@(Model.CurrentSemesterId?.ToString() ?? "-")</span>
            </div>
        </div>
    </div>
}
else if (Model.Role == "TEACHER")
{
    <div class="card">
        <h2 class="section-title">Teacher Profile</h2>
        <div class="detail-grid">
            <div class="detail-item">
                <span class="detail-label">Teacher Code</span>
                <span class="detail-value">@Model.TeacherCode</span>
            </div>
            <div class="detail-item">
                <span class="detail-label">Department</span>
                <span class="detail-value">@(string.IsNullOrWhiteSpace(Model.Department) ? "-" : Model.Department)</span>
            </div>
        </div>
    </div>
}
