@model Web.Models.Student.RegistrationIndexViewModel
@{
    ViewBag.Title = "Course Registration";
}

<section class="registration-page">
    <div class="registration-header">
        <div>
            <h1><i class="fas fa-plus-circle"></i> Course Registration</h1>
            <p><i class="fas fa-calendar"></i> Semester: @Model.SemesterName</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-success">
            <i class="fas fa-check-circle"></i>
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert-error">
            <i class="fas fa-exclamation-circle"></i>
            @TempData["ErrorMessage"]
        </div>
    }

    @if (!Model.Sections.Any())
    {
        <div class="empty-state">
            <div class="empty-state-icon">??</div>
            <h3>No Courses Available</h3>
            <p>There are no open course sections for registration at this time.</p>
        </div>
    }
    else
    {
        <div class="registration-table">
            <table>
                <thead>
                    <tr>
                        <th><i class="fas fa-book"></i> Course</th>
                        <th><i class="fas fa-layer-group"></i> Section</th>
                        <th><i class="fas fa-chalkboard-teacher"></i> Teacher</th>
                        <th><i class="fas fa-door-open"></i> Room</th>
                        <th><i class="fas fa-users"></i> Capacity</th>
                        <th><i class="fas fa-star"></i> Credits</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var classSection in Model.Sections)
                {
                    var isFull = classSection.CurrentEnrollment >= classSection.MaxCapacity;
                    <tr>
                        <td>
                            <strong>@classSection.CourseCode</strong><br />
                            <span>@classSection.CourseName</span>
                        </td>
                        <td>@classSection.SectionCode</td>
                        <td>@(classSection.TeacherName ?? "TBA")</td>
                        <td>@(classSection.Room ?? "Online")</td>
                        <td>
                            <span class="capacity-badge @(isFull ? "full" : "available")">
                                @classSection.CurrentEnrollment / @classSection.MaxCapacity
                            </span>
                        </td>
                        <td>
                            <span class="credits-badge">@classSection.Credits</span>
                        </td>
                        <td>
                            @if (!isFull)
                            {
                                <form asp-action="Register" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="classSectionId" value="@classSection.ClassSectionId" />
                                    <button type="submit" class="btn-primary">
                                        <i class="fas fa-plus"></i> Register
                                    </button>
                                </form>
                            }
                            else
                            {
                                <span class="capacity-badge full">Full</span>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/Student/Registration/CourseRegistration.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}
