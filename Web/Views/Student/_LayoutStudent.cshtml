@using System.Security.Claims
@{
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value ?? "";
    var hideFooter = ViewBag.HideFooter ?? false;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - TPF University Student</title>
    <link rel="stylesheet" href="~/css/Student/_LayoutStudent.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Shared/Navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Shared/Footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Shared/Notification.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body data-role="@userRole" class="@(hideFooter ? "no-footer" : "")">
    <div class="layout-wrapper">
        @await Html.PartialAsync("Navbar")
        
        <main class="main-content">
            @RenderBody()
        </main>
        
        @if (!hideFooter)
        {
            @await Html.PartialAsync("Footer")
        }
        
        <!-- AI Chat Floating Button -->
        <a asp-controller="StudentAIChat" asp-action="Index" class="ai-chat-fab" title="AI Assistant">
            <i class="fas fa-robot"></i>
            <span class="fab-tooltip">Ask AI</span>
        </a>
    </div>
    @await Html.PartialAsync("Notification/_NotificationHubScripts")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/Student/AIChat/FloatingButton.css" asp-append-version="true" />
    @RenderSection("Scripts", required: false)
</body>
</html>

