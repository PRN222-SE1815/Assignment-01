@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<!-- Welcome Section -->
<div class="student-welcome">
    <h2><i class="bi bi-mortarboard-fill"></i> Welcome, @User.FindFirst("FullName")?.Value!</h2>
    <p class="mb-0">Your Learning Journey Starts Here</p>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12 mb-4">
        <h4 class="fw-bold text-white">Quick Actions</h4>
        <p class="text-white-50">Manage your courses and schedule</p>
    </div>

    <!-- Enroll Courses -->
    <div class="col-md-6 mb-4">
        <a asp-action="Index" asp-controller="Enrollment" class="text-decoration-none">
            <div class="card student-dashboard-card">
                <div class="card-body text-center">
                    <div class="icon-wrapper">
                        <i class="bi bi-plus-circle-fill" style="font-size: 2.5rem;"></i>
                    </div>
                    <h5>Enroll Courses</h5>
                    <p class="text-muted mb-0">Browse and register for new courses</p>
                </div>
            </div>
        </a>
    </div>

    <!-- View Schedule -->
    <div class="col-md-6 mb-4">
        <a asp-action="ViewSchedule" asp-controller="Student" class="text-decoration-none">
            <div class="card student-dashboard-card">
                <div class="card-body text-center">
                    <div class="icon-wrapper">
                        <i class="bi bi-calendar-week-fill" style="font-size: 2.5rem;"></i>
                    </div>
                    <h5>View Schedule</h5>
                    <p class="text-muted mb-0">Check your class timetable</p>
                </div>
            </div>
        </a>
    </div>

    <!-- Messages -->
    <div class="col-md-6 mb-4">
        <a asp-action="Index" asp-controller="Chat" class="text-decoration-none">
            <div class="card student-dashboard-card">
                <div class="card-body text-center">
                    <div class="icon-wrapper">
                        <i class="bi bi-chat-dots-fill" style="font-size: 2.5rem;"></i>
                    </div>
                    <h5>Messages</h5>
                    <p class="text-muted mb-0">Chat with classmates and teachers</p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-6 mb-4">
        <a asp-action="Analysis" asp-controller="Student" class="text-decoration-none">
            <div class="card student-dashboard-card">
                <div class="card-body text-center">
                    <div class="icon-wrapper">
                        <i class="bi bi-bar-chart-fill" style="font-size: 2.5rem;"></i>
                    </div>
                    <h5>AI Academic Analysis</h5>
                    <p class="text-muted mb-0">View your AI learning report</p>
                </div>
            </div>
        </a>
    </div>

    <!-- ✅ Manage Grades (NEW) -->
    <div class="col-md-6 mb-4">
        <a asp-controller="Grades" asp-action="MyGrades" class="text-decoration-none">
            <div class="card student-dashboard-card">
                <div class="card-body text-center">
                    <div class="icon-wrapper">
                        <i class="bi bi-journal-check" style="font-size: 2.5rem;"></i>
                    </div>
                    <h5>Manage Grades</h5>
                    <p class="text-muted mb-0">View your grades by course</p>
                </div>
            </div>
        </a>
    </div>

</div>

<!-- Floating Message Icon (Quick Access) -->
<a asp-action="Index" asp-controller="Chat"
   class="btn position-fixed rounded-circle shadow-lg"
   style="bottom: 30px; right: 30px; width: 60px; height: 60px; z-index: 1000; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"
   title="Open Messages">
    <i class="bi bi-chat-dots-fill text-white" style="font-size: 1.5rem;"></i>
</a>
